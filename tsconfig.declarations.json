{
  "extends": "./tsconfig.app.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.stories.ts",
    "src/main.ts",
    "src/App.vue",
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "composite": false,
    "tsBuildInfoFile": null,
    "lib": [
      "ES2023",
      "DOM"
    ],
    "types": [
      "node"
    ]
  }
}